<!DOCTYPE html>
<html>
  <head>
    <%- include ("../partials/header.ejs") %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Rectangle Creator</title>
    <link rel="stylesheet" href="rectangles.css" />
    <script src="rectangles.js"></script>

    <style>
      table,
      th,
      td {
        border: 1px solid #c0c1c1;
        border-collapse: collapse;
      }
      th {
        width: 160px;
        padding: 5px;
        font-weight: 1000;
        font-family: Georgia, Times, Times New Roman, serif;
        text-align: left;
      }
      td {
        padding-left: 8px;
        padding-top: 9px;
        padding-bottom: 10px;
        text-align: left;
        font-family: Georgia, Times, Times New Roman, serif;
      }
      tr {
        background-color: #e9eff1;
      }
      .container {
        overflow: hidden;
      }
      .tab {
        float: left;
      }
      .tab-2 {
        margin-left: 50px;
      }
      .tab-2 input {
        display: block;
        margin-bottom: 10px;
      }
      tr {
        transition: all 0.25s ease-in-out;
      }
      tr:hover {
        background-color: #eee;
        cursor: pointer;
      }
      .header {
        text-align: center;
        font-size: 45px;
        font-weight: bold;
        font-family: OCR A Std, monospace;
      }
    </style>
  </head>
  <body style="background-color: #f7ecde">
    <p class="header">Rectangle Creator</p>
	</div>
    <div class="container">
      <div class="tab tab-1">
        <table id="table">
      <h2>Database Results</h2>
      <table>
          <th>UID</th>
          <th>Name</th>
          <th>Width</th>
          <th>Height</th>
          <th>Color</th> 
      </table>
      <% rows.forEach(function(r) { %>
       <table>
        <tr>
          <th><%= r.uid %></th>
          <th><%= r.name %></th>
          <th><%= r.width %></th>
          <th><%= r.height %></th>
          <th><%= r.color %></th>
        </tr> 
    </table>
    <% }); %>
  </body>
</html>
