<!DOCTYPE html>
<html>
  <head>
    <%- include ("../partials/header.ejs") %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Rectangle Creator</title>
    <link rel="stylesheet" href="rectangles.css" />
    <script src="rectangles.js"></script>

    <style>
      table,
      th,
      td {
        border: 1px solid #c0c1c1;
        border-collapse: collapse;
      }
      th {
        width: 160px;
        padding: 5px;
        font-weight: 1000;
        font-family: Georgia, Times, Times New Roman, serif;
        text-align: left;
      }
      td {
        padding-left: 8px;
        padding-top: 9px;
        padding-bottom: 10px;
        text-align: left;
        font-family: Georgia, Times, Times New Roman, serif;
      }
      tr {
        background-color: #e9eff1;
      }
      .container {
        overflow: hidden;
      }
      .tab {
        float: left;
      }
      .tab-2 {
        margin-left: 50px;
      }
      .tab-2 input {
        display: block;
        margin-bottom: 10px;
      }
      tr {
        transition: all 0.25s ease-in-out;
      }
      tr:hover {
        background-color: #eee;
        cursor: pointer;
      }
      .header {
        position: relative;
        left: 380px;
        font-size: 45px;
        font-weight: bold;
        font-family: OCR A Std, monospace;
      }
      .header2 {
        text-align: left;
        font-size: 30px;
        font-weight: bold;
        font-family: OCR A Std, monospace;
      }
      .textboxid {
        width: 48px;
        height: 25px;
        padding: 0px;
        font-size:15px;
      }
      .second {
        text-align: left;
        font-size: 15px;
        font-family: OCR A Std, monospace;
      }
      .button1 {
        background-color: blue;
        cursor: pointer;
		    font-family: Arial, Helvetica, sans-serif;
		    color: white;
		    font-size: 18.5px;
		    font-weight: 500;
		    text-align: center;
		    width: 70px;
		    left: 0px;
		    top: 50px;
		    border: 0;
        height: 30px;
		    border-radius: 5px;
      }
    </style>
  </head>
  <body style="background-color: #f7ecde">
    <p class="header">Rectangle Creator</p>
	</div>
    <div class="container">
      <div class="tab tab-1">
        <table id="table">
      <table>
          <th>UID</th>
          <th>Name</th>
          <th>Width</th>
          <th>Height</th>
          <th>Color</th> 
      </table>
      <% rows.forEach(function(r) { %>
       <table>
        <tr>
          <th><%= r.uid %></th>
          <th><a href = "/views/pages/infopage.ejs"><%= r.name %></a></th>
          <th><%= r.width %></th>
          <th><%= r.height %></th>
          <th><%= r.color %></th>
        </tr> 
    </table>
    <% }); %>

    <p class = "header2">To Add</p>
    <form class="" action="/addrect" method="post">
      <p class = "second">ID:</p>
      <input class = "textboxid" type ="number" name="uid" id="id" /></br>

      <p class = "second">Name:</p>
      <input class = "textboxid" type="text" name="name" id="name" /></br>
    
      <p class = "second">Width:</p>
      <input class = "textboxid" type="number" name="width" id="width" /></br>
    
      <p class = "second">Height:</p>
      <input class = "textboxid" type="number" name="height" id="height" /></br>

      <p class = "second">Color:</p>
      <input class = "textboxid" type="text" name="color" id="color" /></br>
      
      <button class = "button1" onclick="addrow();">Add</button>

    </form>

    <p class = "header2">To Update</p>
    <form class="" action="/updaterect" method="post">
      <p class = "second">ID:</p>
      <input class = "textboxid" type ="number" name="uid" id="id" /></br>

      <p class = "second">Name:</p>
      <input class = "textboxid" type="text" name="name" id="name" /></br>
    
      <p class = "second">Width:</p>
      <input class = "textboxid" type="number" name="width" id="width" /></br>
    
      <p class = "second">Height:</p>
      <input class = "textboxid" type="number" name="height" id="height" /></br>

      <p class = "second">Color:</p>
      <input class = "textboxid" type="text" name="color" id="color" /></br>

      <button class = "button1" onclick="updaterow();">Update</button>
    </form>

    <p class = "header2">To Delete</p>
    <form class="" action="/deleterect" method="post">
      <p class = "second">ID:</p>
      <input class = "textboxid" type ="number" name="uid" id="id" /></br>
      <button class = "button1" onclick="deleterow();">Delete</button>
    </form>
    </div>
  </div>
</body>
</html>